<div class="container">
  <h1>Vehicles List</h1>
  <br>
  <table class="table table-hover">
    <tr>
      <th>#</th>
      <th>Vehicle identifier</th>
      <th>Show recents coordinates</th>
    </tr>

    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.id %></td>
        <td><%= vehicle.vehicle_identifier %></td>
        <td><%= link_to "Coordinates", vehicle_show_path(vehicle.id), class: "btn btn-info" %></td>
      </tr>
    <% end %>

  </table>
</div>


